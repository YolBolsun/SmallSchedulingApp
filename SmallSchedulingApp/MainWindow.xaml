<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="SmallSchedulingApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SmallSchedulingApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="SmallSchedulingApp">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid Padding="20" Background="{ThemeResource LayerFillColorDefaultBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header with navigation -->
            <RowDefinition Height="Auto"/>
            <!-- Day labels -->
            <RowDefinition Height="*"/>
            <!-- Calendar grid -->
            <RowDefinition Height="Auto"/>
            <!-- Action buttons -->
        </Grid.RowDefinitions>

        <!-- Header with Month/Year and Navigation -->
        <Grid Grid.Row="0" Margin="0,0,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="PreviousMonthButton"
                    Grid.Column="0"
                    Content="&#xE0A6;"
                    FontFamily="Segoe MDL2 Assets"
                    FontSize="16"
                    Click="PreviousMonth_Click"
                    Background="Transparent"
                    BorderThickness="0"
                    Width="40"
                    Height="40"/>

            <TextBlock x:Name="MonthYearText"
                       Grid.Column="1"
                       Text="December 2025"
                       FontSize="20"
                       FontWeight="SemiBold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>

            <Button x:Name="NextMonthButton"
                    Grid.Column="2"
                    Content="&#xE0AD;"
                    FontFamily="Segoe MDL2 Assets"
                    FontSize="16"
                    Click="NextMonth_Click"
                    Background="Transparent"
                    BorderThickness="0"
                    Width="40"
                    Height="40"/>
        </Grid>

        <!-- Day of Week Labels -->
        <Grid Grid.Row="1" Margin="0,0,0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="Sun" FontSize="14" HorizontalAlignment="Center" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
            <TextBlock Grid.Column="1" Text="Mon" FontSize="14" HorizontalAlignment="Center" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
            <TextBlock Grid.Column="2" Text="Tue" FontSize="14" HorizontalAlignment="Center" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
            <TextBlock Grid.Column="3" Text="Wed" FontSize="14" HorizontalAlignment="Center" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
            <TextBlock Grid.Column="4" Text="Thu" FontSize="14" HorizontalAlignment="Center" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
            <TextBlock Grid.Column="5" Text="Fri" FontSize="14" HorizontalAlignment="Center" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
            <TextBlock Grid.Column="6" Text="Sat" FontSize="14" HorizontalAlignment="Center" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
        </Grid>

        <!-- Calendar Grid (dynamically generated) -->
        <Grid x:Name="CalendarGrid" Grid.Row="2" />

        <!-- Action Buttons -->
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Spacing="12"
                    Margin="0,16,0,0">
            <Button x:Name="AddEventButton"
                    Content="Add Event"
                    Click="AddEvent_Click"
                    Style="{StaticResource AccentButtonStyle}"
                    MinWidth="120"
                    Height="36"
                    FontSize="14"/>
            <Button x:Name="ExploreEventButton"
                    Content="Explore Event"
                    IsEnabled="False"
                    ToolTipService.ToolTip="Coming in a future version"
                    MinWidth="120"
                    Height="36"
                    FontSize="14"/>
        </StackPanel>
    </Grid>
</Window>
